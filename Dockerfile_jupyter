FROM  jupyter/base-notebook:python-3.11

USER root

# Install Java for PySpark
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openjdk-17-jdk \
    curl \
    net-tools \
    dnsutils \
    procps \
    iputils-ping \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Add jovyan to sudo group and configure passwordless sudo
RUN echo "jovyan ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/jovyan && \
    chmod 0440 /etc/sudoers.d/jovyan

# Set Java environment variable
ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

# Switch to non-root user
USER ${NB_UID}

# Install required Python packages using conda instead of pip
RUN conda config --set channel_priority flexible && \
    conda install -y -c conda-forge -n base --solver=classic conda-libmamba-solver && \
    conda install -y -c conda-forge \
    jupyterlab=4.0.6 \
    ipywidgets=8.0.6 \
    ipykernel=6.24.0 \
    jupyterlab-widgets=3.0.3 \
    jupyterlab-git=0.40.1 \
    nodejs=20.5.1 && \
    conda clean -afy
RUN conda install -y -c conda-forge \
    pyspark=3.4.1 \
    pandas \
    numpy \
    scikit-learn \
    matplotlib \
    seaborn \
    --solver=libmamba && \
    conda install -y -c conda-forge lightgbm && \
    conda clean -afy

# Configure PySpark to use the installed JDK
ENV PYSPARK_PYTHON=/opt/conda/bin/python
ENV PYSPARK_DRIVER_PYTHON=/opt/conda/bin/python
ENV SPARK_HOME=/opt/conda/lib/python3.10/site-packages/pyspark

# Launch JupyterLab by default
ENV JUPYTER_ENABLE_LAB=yes

WORKDIR /home/jovyan/work

# Expose the JupyterLab port
EXPOSE 8888