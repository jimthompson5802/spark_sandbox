FROM  openjdk:17-jdk-slim

# Set environment variables
ENV SPARK_VERSION=3.4.1
ENV HADOOP_VERSION=3
ENV SPARK_HOME=/opt/spark
ENV CONDA_HOME=/opt/conda
ENV PYTHONPATH=${SPARK_HOME}/python:${PYTHONPATH}
ENV PATH=${CONDA_HOME}/bin:${PATH}

# Install necessary packages (excluding Python as we'll use conda)
RUN apt-get update && \
    apt-get install -y wget curl bash tini procps && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Miniconda
RUN wget -q https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /tmp/miniconda.sh && \
    bash /tmp/miniconda.sh -b -p ${CONDA_HOME} && \
    rm /tmp/miniconda.sh && \
    ${CONDA_HOME}/bin/conda clean -afy

# Create conda environment for Spark
RUN conda create -y -n spark-env python=3.11 && \
    conda clean -afy

# Set PATH to use conda environment by default
ENV PATH=${CONDA_HOME}/envs/spark-env/bin:${PATH}
ENV PYSPARK_PYTHON=${CONDA_HOME}/envs/spark-env/bin/python
ENV PYSPARK_DRIVER_PYTHON=${CONDA_HOME}/envs/spark-env/bin/python

# Download and extract Apache Spark
RUN wget -q "https://archive.apache.org/dist/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz" -O /tmp/spark.tgz && \
    tar -xf /tmp/spark.tgz -C /opt && \
    ln -s /opt/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION} ${SPARK_HOME} && \
    rm /tmp/spark.tgz

# Install Python libraries using conda
RUN conda install -n spark-env -y -c conda-forge \
    pyspark=${SPARK_VERSION} \
    pandas \
    numpy \
    scikit-learn && \
    conda install -n spark-env -y -c conda-forge lightgbm && \
    conda clean -afy

# Set working directory
WORKDIR ${SPARK_HOME}

# Add Spark to PATH
ENV PATH=${SPARK_HOME}/bin:${PATH}

# Copy the entrypoint script
COPY docker/entrypoint.sh /
RUN chmod +x /entrypoint.sh

# Expose necessary ports
# Spark UI
EXPOSE 8080
# Spark Master port
EXPOSE 7077
# Spark Master UI
EXPOSE 8090
# Spark Worker UI
EXPOSE 8081
# Spark Driver Web UI
EXPOSE 4040

# Activate conda environment in the entrypoint
SHELL ["/bin/bash", "-c"]
ENTRYPOINT ["/entrypoint.sh"]